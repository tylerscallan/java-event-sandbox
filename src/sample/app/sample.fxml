<GridPane fx:controller="sample.app.Controller"
          xmlns:fx="http://javafx.com/fxml"
          maxHeight="Infinity" maxWidth="Infinity"
>
    <stylesheets>
        <URL value="@/sample/app/style.css" />
    </stylesheets>
            <TableView
                    fx:id="tableView"
                    editable="true"
                    GridPane.hgrow="always" GridPane.vgrow="always"
            >
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
                <columns>
                    <TableColumn
                            styleClass="col-header-left, first-col"
                            text="Line"
                            resizable="false"
                            prefWidth="80">
                        <cellValueFactory>
                            <PropertyValueFactory property="line" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn
                            text="Item"
                            resizable="false"
                            prefWidth="124">
                        <cellValueFactory>
                            <PropertyValueFactory property="item" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn
                            text="Description"
                            resizable="false"
                            prefWidth="260">
                        <cellValueFactory>
                            <PropertyValueFactory property="description" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn
                            fx:id="professionalPrice"
                            styleClass="col-header-center, price"
                            text="Professional&#10;Price"
                            resizable="false"
                            prefWidth="120">
                        <cellValueFactory>
                            <PropertyValueFactory property="professionalPrice" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn
                            styleClass="col-header-center, price"
                            text="Retail&#10;Price"
                            resizable="false"
                            prefWidth="120">
                        <cellValueFactory>
                            <PropertyValueFactory property="retailPrice" />
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
</GridPane>